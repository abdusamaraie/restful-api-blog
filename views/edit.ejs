<%- include('./partials/header')%>

<div class="ui main text container segment">
  <div class="ui huge header">Edit <%= blog.title %></div>
  <form
    action="/blogs/<%= blog._id %>?_method=PUT"
    method="POST"
    class="ui form"
  >
    <div class="ui field">
      <label for="">Title</label>
      <input type="text" name="blog[title]" id="" value="<%= blog.title %>" />
    </div>
    <div class="ui field">
      <label for="">Image</label>
      <input type="text" name="blog[image]" id="" value="<%= blog.image %>" />
    </div>
    <div class="ui field">
      <label for="">Body</label>
      <textarea name="blog[body]" cols="30" rows="10">
 <%= blog.body %>  </textarea
      >
    </div>

    <input type="submit" value="Submit" class="ui black basic big button" />
  </form>
</div>
<%- include('./partials/footer')%>
